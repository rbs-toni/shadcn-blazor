@namespace ShadcnBlazor.Docs
@inherits ShadcnComponentBase

<ContainerWrapper>
    <Container Class="flex-1 items-start md:grid md:grid-cols-[220px_minmax(0,1fr)] md:gap-6 lg:grid-cols-[240px_minmax(0,1fr)] lg:gap-10">
        <DocsSidebar Groups="@Groups"/>
        <main class="relative py-6 lg:gap-10 lg:py-8 xl:grid xl:grid-cols-[1fr_300px]">
            <div class="mx-auto w-full min-w-0 max-w-2xl">
                @ChildContent
            </div>
        </main>
    </Container>
</ContainerWrapper>

@code{
    [Parameter, EditorRequired]
    public List<SidebarGroup>? Groups { get; set; }
}