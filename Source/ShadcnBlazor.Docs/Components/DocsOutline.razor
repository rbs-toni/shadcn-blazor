@namespace ShadcnBlazor.Docs
@inherits ShadcnComponentBase
@inject IStringLocalizer<DocsOutline> Localizer

<div class="hidden text-sm xl:block">
    <div class="sticky top-20 -mt-6 h-[calc(100vh-3.5rem)] pt-4">
        <div class="no-scrollbar h-full overflow-auto pb-10 space-y-4">
            <div class="space-y-2">
                <p class="font-medium">@Localizer["On This Page"]</p>
                @if (_anchors?.Count > 0)
                {
                    <DocsOutlineGroup Items="_anchors" Depth="0" />
                }
            </div>
            <DocsConsoleLog Class="mt-auto"/>
        </div>
    </div>
</div>