@namespace ShadcnBlazor.Docs
@inherits ShadcnComponentBase

<header class="border-grid sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
    <ContainerWrapper>
        <Container Class="flex h-14 items-center gap-2 md:gap-4">
            <div class="mr-4 hidden md:flex">
                <DocsBrand />
                @if (Items?.Count > 0)
                {
                    <nav class="flex items-center gap-4 text-sm xl:gap-6">
                        @foreach (var item in Items)
                        {
                            <DocsNavItem Item="@item" @key="@item.Title" />
                        }
                    </nav>
                }
            </div>
            <DocsToggleButton />
            <div class="ml-auto flex items-center gap-2 md:flex-1 md:justify-end">
                <nav class="flex items-center gap-0.5">
                    <DocsGitHub />
                    <DocsThemeSwitcher />
                </nav>
            </div>
        </Container>
    </ContainerWrapper>
</header>

@code {
    [Parameter]
    public List<NavItem>? Items { get; set; }
}