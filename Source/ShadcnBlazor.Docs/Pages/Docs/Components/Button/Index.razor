@page "/docs/components/button"
@using ShadcnBlazor.Docs.Pages.Docs.Components.Button.Examples
@inherits ShadcnComponentBase
@inject IStringLocalizer<Index> Localizer

<DocsPageHeader Title="Button" Breadcrumbs="_breadcrumbs.Items">
    <DocsPageHeaderDescription>
        @Localizer["Displays a button or a component that looks like a button."]
    </DocsPageHeaderDescription>
</DocsPageHeader>

<DocsPageContent>
    <DocsPreview PreviewComponent="@_buttonDefault"
                 CodePath="ButtonDefault.razor" />
</DocsPageContent>

@code {
    [CascadingParameter]
    LayoutContext LayoutContext { get; set; } = default!;

    BreadcrumbCollection _breadcrumbs = new ComponentsBreadcrumbCollection("Button");
    ComponentTemplate _buttonDefault = new ComponentTemplate(typeof(ButtonDefault));

    protected override void OnInitialized()
    {
        LayoutContext.SetLayoutOptions(
            pageTitle: "Button",
            useSidebar: true,
            useOutline: true,
            useFooterLinks: true);
    }
}
