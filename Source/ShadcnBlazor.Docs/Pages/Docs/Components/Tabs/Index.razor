@page "/docs/components/tabs"
@using ShadcnBlazor.Docs.Pages.Docs.Components.Tabs.Examples
@inherits ShadcnComponentBase
@inject IStringLocalizer<Index> Localizer

<DocsPageHeader Title="Tabs" Breadcrumbs="_breadcrumbs.Items">
    <DocsPageHeaderDescription>
        @Localizer["A set of layered sections of content—known as tab panels—that are displayed one at a time."]
    </DocsPageHeaderDescription>
</DocsPageHeader>

<DocsPageContent>
    <DocsPreview PreviewComponent="@_tabsDefault"
                 CodePath="TabsDefault.razor" />
</DocsPageContent>

@code {
    [CascadingParameter]
    LayoutContext LayoutContext { get; set; } = default!;

    BreadcrumbCollection _breadcrumbs = new ComponentsBreadcrumbCollection("Tabs");
    SlotComponent _tabsDefault = new SlotComponent(typeof(TabsDefault));

    protected override void OnInitialized()
    {
        LayoutContext.SetLayoutOptions(
            pageTitle: "Tabs",
            useSidebar: true,
            useOutline: true,
            useFooterLinks: true);
    }
}

