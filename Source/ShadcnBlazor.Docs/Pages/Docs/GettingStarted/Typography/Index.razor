@page "/docs/typography"
@using ShadcnBlazor.Docs.Pages.Docs.GettingStarted.Typography.Examples
@inherits ShadcnComponentBase

<DocsPageHeader Title="Typography" Breadcrumbs="_breadcrumbs.Items">
    <DocsPageHeaderDescription>
        Styles for headings, paragraphs, lists...etc
    </DocsPageHeaderDescription>
</DocsPageHeader>

<DocsPageContent>
    <DocsPreview PreviewComponent="@_preview"
                 CodePath="TypographyDemo.razor">
    </DocsPreview>

    <DocsPageSection Title="h1">
        <DocsPreview PreviewComponent="@_h1Preview"
                     CodePath="TypographyHeading1.razor">
        </DocsPreview>
    </DocsPageSection>

    <DocsPageSection Title="h2">
        <DocsPreview PreviewComponent="@_h2Preview"
                     CodePath="TypographyHeading2.razor">
        </DocsPreview>
    </DocsPageSection>

    <DocsPageSection Title="h3">
        <DocsPreview PreviewComponent="@_h3Preview"
                     CodePath="TypographyHeading3.razor">
        </DocsPreview>
    </DocsPageSection>

    <DocsPageSection Title="h4">
        <DocsPreview PreviewComponent="@_h4Preview"
                     CodePath="TypographyHeading4.razor">
        </DocsPreview>
    </DocsPageSection>

    <DocsPageSection Title="p">
        <DocsPreview PreviewComponent="@_pPreview"
                     CodePath="TypographyParagraph.razor">
        </DocsPreview>
    </DocsPageSection>

    <DocsPageSection Title="blockquote">
        <DocsPreview PreviewComponent="@_blockquotePreview"
                     CodePath="TypographyBlockquote.razor">
        </DocsPreview>
    </DocsPageSection>

    <DocsPageSection Title="table">
        <DocsPreview PreviewComponent="@_tablePreview"
                     CodePath="TypographyTable.razor">
        </DocsPreview>
    </DocsPageSection>

    <DocsPageSection Title="list">
        <DocsPreview PreviewComponent="@_listPreview"
                     CodePath="TypographyList.razor">
        </DocsPreview>
    </DocsPageSection>

    <DocsPageSection Title="Inline code">
        <DocsPreview PreviewComponent="@_inlineCodePreview"
                     CodePath="TypographyInlineCode.razor">
        </DocsPreview>
    </DocsPageSection>

    <DocsPageSection Title="Lead">
        <DocsPreview PreviewComponent="@_leadPreview"
                     CodePath="TypographyLead.razor">
        </DocsPreview>
    </DocsPageSection>

    <DocsPageSection Title="Large">
        <DocsPreview PreviewComponent="@_largePreview"
                     CodePath="TypographyLarge.razor">
        </DocsPreview>
    </DocsPageSection>

    <DocsPageSection Title="Small">
        <DocsPreview PreviewComponent="@_smallPreview"
                     CodePath="TypographySmall.razor">
        </DocsPreview>
    </DocsPageSection>

    <DocsPageSection Title="Muted">
        <DocsPreview PreviewComponent="@_mutedPreview"
                     CodePath="TypographyMuted.razor">
        </DocsPreview>
    </DocsPageSection>

</DocsPageContent>

@code {
    [CascadingParameter]
    LayoutContext LayoutContext { get; set; } = default!;

    BreadcrumbCollection _breadcrumbs = new DocsBreadcrumbCollection("Typography");
    ComponentTemplate _preview = new ComponentTemplate(typeof(TypographyDemo));
    ComponentTemplate _h1Preview = new ComponentTemplate(typeof(TypographyHeading1));
    ComponentTemplate _h2Preview = new ComponentTemplate(typeof(TypographyHeading2));
    ComponentTemplate _h3Preview = new ComponentTemplate(typeof(TypographyHeading3));
    ComponentTemplate _h4Preview = new ComponentTemplate(typeof(TypographyHeading4));
    ComponentTemplate _pPreview = new ComponentTemplate(typeof(TypographyParagraph));
    ComponentTemplate _blockquotePreview = new ComponentTemplate(typeof(TypographyBlockquote));
    ComponentTemplate _tablePreview = new ComponentTemplate(typeof(TypographyTable));
    ComponentTemplate _listPreview = new ComponentTemplate(typeof(TypographyList));
    ComponentTemplate _inlineCodePreview = new ComponentTemplate(typeof(TypographyInlineCode));
    ComponentTemplate _leadPreview = new ComponentTemplate(typeof(TypographyLead));
    ComponentTemplate _largePreview = new ComponentTemplate(typeof(TypographyLarge));
    ComponentTemplate _smallPreview = new ComponentTemplate(typeof(TypographySmall));
    ComponentTemplate _mutedPreview = new ComponentTemplate(typeof(TypographyMuted));


    protected override void OnInitialized()
    {
        LayoutContext.SetLayoutOptions(
            pageTitle: "Typography",
            useSidebar: true,
            useOutline: true,
            useFooterLinks: true);
    }
}