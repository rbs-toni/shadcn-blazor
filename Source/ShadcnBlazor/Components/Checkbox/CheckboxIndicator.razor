@namespace ShadcnBlazor
@inherits ShadcnComponentBase

@if (Visible)
{
    <span id="@Id" class="@Class" style="@Style" data-state="@StateValue" data-disabled="@Disabled" @ref=Ref @attributes=Attributes>
        @ChildContent
    </span>
}

@code {
    [Parameter]
    public bool Visible { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public string? StateValue { get; set; }
}