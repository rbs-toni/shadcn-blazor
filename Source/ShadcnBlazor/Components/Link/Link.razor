@namespace ShadcnBlazor
@inherits ShadcnLinkBaseComponent

<a id="@Id"
   href="@Href"
   class="@ClassValue"
   style="@Style"
   @ref=Ref @attributes=Attributes
   aria-current="@(IsActive ? "page":"")">
    @ChildContent
</a>

@code{
    string? ClassValue => new CssBuilder(Class).AddClass(ActiveClass, IsActive).Build();
}