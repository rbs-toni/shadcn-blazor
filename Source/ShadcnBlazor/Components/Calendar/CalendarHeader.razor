@namespace ShadcnBlazor
@inherits ShadcnComponentBase
@using TailwindMerge
@inject TwMerge TwMerge

<div id="@Id"
     class="@(TwMerge.Merge(ClassValue))"
     style="@Style"
     @ref=Ref
     @attributes=Attributes>
    @ChildContent
</div>

@code {
    const string DefaultClasses = "relative flex w-full items-center justify-between pt-1";
    const string NewYorkClasses = "relative flex w-full items-center justify-between pt-1";

    string? ClassValue => new CssBuilder(Class)
        .AddClass(DefaultClasses, NewYorkClasses, IsDefaultStyle)
        .Build();
}