@namespace ShadcnBlazor
@inherits ShadcnComponentBase

<div class="@ClassValue" style="@Style" @ref=Ref @attributes=@Attributes>
    @ChildContent
</div>

@code {
    const string DefaultClasses = "py-1.5 pl-8 pr-2 text-sm font-semibold";
    const string NewYorkClasses = "px-2 py-1.5 text-sm font-semibold";

    string? ClassValue => new CssBuilder(Class).AddClass(DefaultClasses, NewYorkClasses, IsDefaultStyle).Build();
}