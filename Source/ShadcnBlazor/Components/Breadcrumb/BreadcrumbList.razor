@namespace ShadcnBlazor
@inherits ShadcnComponentBase

<ol id="@Id" class="@ClassValue" style="@Style" @ref=Ref @attributes=Attributes data-slot="breadcrumb-list">
    @ChildContent
</ol>

@code {
    string? ClassValue => new CssBuilder(Class)
        .AddClass("text-muted-foreground flex flex-wrap items-center gap-1.5 text-sm break-words sm:gap-2.5")
        .Build();
}