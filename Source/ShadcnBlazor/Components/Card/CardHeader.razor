@namespace ShadcnBlazor
@inherits ShadcnComponentBase
@using TailwindMerge
@inject TwMerge TwMerge

<div id="@Id" class="@(TwMerge.Merge(ClassValue))" style="@Style" @ref=Ref @attributes=Attributes>
    @ChildContent
</div>

@code {
    const string DefaultClasses = "flex flex-col gap-y-1.5 p-6";

    string? ClassValue => new CssBuilder(Class)
        .AddClass(DefaultClasses)
        .Build();
}