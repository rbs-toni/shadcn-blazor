@namespace ShadcnBlazor
@inherits ShadcnComponentBase

<p id="@Id" class="@ClassValue" style="@Style" @ref=Ref @attributes=Attributes>
    @ChildContent
</p>

@code{
    const string DefaultClasses = "text-sm text-muted-foreground";

    string? ClassValue => new CssBuilder(Class)
        .AddClass(DefaultClasses)
        .Build();
}