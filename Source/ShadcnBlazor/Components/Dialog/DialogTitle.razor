@namespace ShadcnBlazor
@inherits ShadcnComponentBase
@inject TwMerge TwMerge

<h2 id="@Id"
    class="@(TwMerge.Merge(ClassValue))"
    style="@Style"
    @ref="Ref"
    @attributes="Attributes">
    @ChildContent
</h2>

@code {
    const string DefaultClasses = "text-lg font-semibold leading-none tracking-tight";
    const string NewYorkClasses = "text-lg font-semibold leading-none tracking-tight";

    string? ClassValue => new CssBuilder(Class)
        .AddClass(DefaultClasses, NewYorkClasses, IsDefaultStyle)
        .Build();
}