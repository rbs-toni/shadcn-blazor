@namespace ShadcnBlazor
@inherits ShadcnComponentBase

<svg xmlns="http://www.w3.org/2000/svg" id="@Id" width="@Width" height="@Height" viewBox="0 0 12 6" @ref="Ref" @attributes="Attributes">
    @if (Rounded)
    {
        <path d="M0 0L6 6L12 0" />
    }
    else
    {
        <path d="M0 0L4.58579 4.58579C5.36683 5.36683 6.63316 5.36684 7.41421 4.58579L12 0" />
    }
</svg>

@code {
    /// <summary>
    /// The width of the arrow in pixels.
    /// </summary>
    [Parameter]
    public int Width { get; set; } = 10;

    /// <summary>
    /// The height of the arrow in pixels.
    /// </summary>
    [Parameter]
    public int Height { get; set; } = 5;

    /// <summary>
    /// When `true`, render the rounded version of arrow.
    /// </summary>
    [Parameter]
    public bool Rounded { get; set; }
}